<% layout('layouts/boilerplate') -%>
<div class="grid col-10 col-md-4 offset-1 offset-md-4 h-50 mt-5">
    <h2 class="mb-4">Welcome Back...</h2>
    <form method="post" action="/login" class="d-flex flex-column gap-3">
        <div class="mb-3 ">
            <input id="username" placeholder="Username" class="form-control" type="text" name="username" required>
        </div>
        <div class="mb-3">
            <input id="password" placeholder="Password" class="form-control" type="password" name="password" required>
        </div>
        <button class="button-1 bg-info offset-md-4 col-md-4">Login</button>
    </form> 
    <p class="mt-3">What ? You don't have account create new one <a href="/sign-up">Sign up</a></p>
</div>