<% layout('layouts/boilerplate') -%>
<body>
    <div>
        <p><b><%= data.title %></b></p>
        <p><%= data.description %></p>
        <p>&#8377;<%= data.price.toLocaleString("en-IN") %></p>
        <p><%= data.location %></p>
